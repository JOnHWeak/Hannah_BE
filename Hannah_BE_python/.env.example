# Application Settings
APP_NAME=HannahAI.Conversation
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=True
LOG_LEVEL=INFO

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# Security
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Google Gemini API
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-pro
GEMINI_TEMPERATURE=0.7
GEMINI_MAX_TOKENS=2048

# OpenAI API (Backup - Optional)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4

# MongoDB (Future use)
# MONGODB_URL=mongodb://localhost:27017
# MONGODB_DB_NAME=hannah_conversation

# Elasticsearch (Future use)
# ELASTICSEARCH_URL=http://localhost:9200
# ELASTICSEARCH_INDEX=hannah_documents

# SQL Server (Future use)
# SQLSERVER_HOST=localhost
# SQLSERVER_PORT=1433
# SQLSERVER_DATABASE=HannahDB
# SQLSERVER_USER=sa
# SQLSERVER_PASSWORD=YourPassword

# File Upload
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=["pdf","txt","doc","docx","md"]

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60

